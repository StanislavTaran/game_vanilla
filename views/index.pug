section.section
    .section__game
        .section__status-bar
            img.status-bar__image(src='./images/troll.svg' alt='troll-image')
            button#start-button.button Start
            button#reset-button.button New Game
            .status-bar__count-board
                span.status-bar__text Points
                span#score.status-bar__text-green 00
            .status-bar__count-board
                span.status-bar__text Time left
                span#time.status-bar__text-red 01:00
        ul#squares-list.section__squares-list
            - for (let x = 0; x < 70; x++)
                li(id=x class='section__squares-item')
    .score-table-wrapper
        h3.score-table__title Best Players
        ul#score-list.score-table__list
            each item in results
                li.score-table__item= item.name + ':' + item.score
